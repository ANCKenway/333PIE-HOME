# 333HOME Configuration
# =====================
# Copier ce fichier en .env et ajuster les valeurs

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Agents
AGENTS_DIR=static/agents
AGENTS_VERSIONS_TO_KEEP=4
AGENTS_UPDATE_TIMEOUT=300
AGENTS_RESTART_RATE_LIMIT=60

# Data
DATA_DIR=data
DATA_RETENTION_DAYS=30

# Network Scanning
NETWORK_SCAN_INTERVAL=300
NETWORK_SCAN_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Tailscale (optionnel)
TAILSCALE_ENABLED=false
# TAILSCALE_AUTHKEY=tskey-...

# Security (production)
SECRET_KEY=change-me-in-production
JWT_SECRET=change-me-in-production
CORS_ORIGINS=*

# Database (future)
# DATABASE_URL=sqlite:///./data/app.db
